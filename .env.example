# AI Notes-to-PPT Generator Environment Configuration
# Copy this file to .env and fill in your actual API keys
# Never commit the .env file with real API keys to version control

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7

# Application Configuration
APP_NAME=AI Notes-to-PPT Generator
APP_VERSION=1.0.0
DEBUG=false

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,txt,docx
UPLOAD_FOLDER=uploads

# Presentation Generation Configuration
DEFAULT_TEMPLATE=professional
MAX_SLIDES=50
MIN_FONT_SIZE=12
MAX_FONT_SIZE=44

# Processing Configuration
CHUNK_SIZE=4000
CHUNK_OVERLAP=200
SUMMARY_RATIO=0.3

# Security Configuration
SECRET_KEY=your_secret_key_here_for_sessions
SESSION_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Configuration - MongoDB
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=ai_notes_to_ppt
